<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ttt="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_frame"
    android:orientation="vertical">

    <org.trustnote.wallet.widget.PageHeader
        android:id="@+id/page_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ttt:ttt_icon="@drawable/ic_wallet_receive"
        ttt:ttt_title="@string/mypairid_title" />

    <TextView
        android:id="@+id/mypairid_title_info"
        style="@style/t_text_msg"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/line_gap_20"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:text="@string/mypairid_title_info" />

    <ImageView
        android:layout_marginLeft="@dimen/line_gap_20"
        android:layout_marginRight="@dimen/line_gap_20"
        android:src="@drawable/line_dash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/mypairid_text"
        style="@style/t_text_msg"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/line_gap_20"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:text="" />

    <include
        android:id="@+id/qr_code"
        layout="@layout/l_qr_code" />


    <Button
        android:id="@+id/mypairid_copy_btn"
        style="@style/t_btn_blue"
        android:layout_marginLeft="@dimen/line_gap_32"
        android:layout_marginRight="@dimen/line_gap_32"
        android:layout_marginTop="@dimen/line_gap_32"
        android:layout_marginBottom="@dimen/btn_bottom_margin"
        android:layout_width="match_parent"
        android:text="@string/mypairid_copy_btn" />

</LinearLayout>